{
    "name": "chiron/http-message-util",
    "description": "Utility classes and constants for use with PSR-7 (psr/http-message)",
    "keywords": ["psr", "psr-7", "http", "code", "status", "http-message", "request", "response"],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\Http\\Message\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Http\\Message\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "chiron/coding-standard": "^3.0"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse src --level=max",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
